<main class="container"> 
  <div class="row">
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%= @event.event_name %></span>
          <p>Description: <%= @event.event_description %></p>
          <p>Where: <%= @event.city.city_name %></p>
          <p>Start Date: <%= @event.start_date %></p>
          <p>Registrations Deadline: <%= @event.registration_deadline %></p>
          <p>Gift Exchange Date: <%= @event.event_date %></p>
          <p>Minimum Value: <%= @event.min_value %></p>
          <p>Maximum Value: <%= @event.max_value %></p>
          <p>Public Event: <%= @event.public %></p>
          <p>Max Participants: <%= @event.max_participants %></p>
          <p>Created By: <%= @event.user.first_name %> <%= @event.user.last_name %></p>
        </div>
        <% if @event.user == @user %>
          <form class="card-action" action="/events/<%= @event.id %>/delete" method="POST">
            <input type="hidden" name="_method" value="DELETE">
            <a href="/events/<%= @event.id %>/edit">Edit</a>
            <a href="#" class="deleteButton">Delete</a>
          </form>
        <% end %>
      </div>
    </div>
  </div>
</main>

