<main class="container"> 
  <div class="row">
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%= @gift.gift_name %></span>
          <p>Description: <%= @gift.gift_description %></p>
          <p>Estimated Price: <%= @gift.est_value%></p>
        </div>
        <% if @gift.user == @user %>
          <form class="card-action" action="/users/<%= @gift.user.id %>/gifts/<%= @gift.id %>/delete" method="POST">
            <input type="hidden" name="_method" value="DELETE">
            <a href="/users/<%= @gift.user.id %>/gifts/<%= @gift.id %>/edit">Edit</a>
            <a href="#" class="deleteButton">Delete</a>
          </form>
        <% end %>
      </div>
    </div>
  </div>
</main>

